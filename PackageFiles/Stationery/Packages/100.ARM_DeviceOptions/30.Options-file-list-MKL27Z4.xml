<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<!DOCTYPE root SYSTEM "../package.dtd">

<root version="1.0">
   <!-- Extra Optional files for MKL27 -->
   <projectActionList id="Options-file-list-MKL27Z4">
      <applyWhen>
         <and>
            <or>
               <deviceSubfamilyIs>MKL27Z644</deviceSubfamilyIs>
               <deviceSubfamilyIs>MKL27Z4</deviceSubfamilyIs>
               <deviceSubfamilyIs>MKL17Z644</deviceSubfamilyIs>
               <deviceSubfamilyIs>MKL17Z4</deviceSubfamilyIs>
            </or>
            <variableRef idRef="outputType" condition="matches" value=".*ProjectType\.exe$" />
         </and>
      </applyWhen>
      <!-- Security with boot -->
      <copy source="Startup_Code/security-mkl-boot.c"   target="Startup_Code/security.c" />
      <!-- Clock -->
      <copy source="Startup_Code/clock-MGC_Lite.c"               target="Startup_Code/clock.c" />
      <copy source="Project_Headers/clock_configure-MCG-MKL27.h" target="Project_Headers/clock_configure.h" />
      <!-- Console -->
      <copy source="Startup_Code/console-mkl-lp.c" target="Startup_Code/console.c" />
      <copy source="Project_Headers/console.h"     target="Project_Headers/console.h" />
   </projectActionList>
</root>