<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<!DOCTYPE root SYSTEM "../package.dtd">

<root version="1.0">
   <!-- Extra Optional files for MK22F51212 with USB derived Clock (MK22FN(some)) -->
   <projectActionList id="Options-file-list-MK22F512M12">
      <applyWhen>
         <and>
	    <or>
               <deviceSubfamilyIs>MK22F51212</deviceSubfamilyIs>
               <deviceSubfamilyIs>MK82F25615</deviceSubfamilyIs>
	    </or>
            <variableRef idRef="outputType" condition="matches" value=".*ProjectType\.exe$" />
         </and>
      </applyWhen>
      <variable id="projectOptionValue.Clock-setup" 
         name="Clock setup code" 
         description="Adds code for basic clock initialization - check assumptions made"
         checkGroup="group-additional-options"/>
      <variable id="projectOptionValue.UART-setup" 
         name="UART setup code" 
         description="Adds C stdio (UART) support for newlib"          
         checkGroup="group-additional-options" >
         <enableWhen>
            <requirement idRef="projectOptionValue.Clock-setup"/>
         </enableWhen>
      </variable>
      
      <projectActionList>
         <applyWhen>
            <variableRef idRef="projectOptionValue.Clock-setup" />
         </applyWhen>
         <copy source="Startup_Code/clock-MK22F512M12.c" target="Startup_Code/clock.c" />
         <copy source="Project_Headers/clock_configure-MK22F512M12.h" target="Project_Headers/clock_configure.h" />
      </projectActionList>
      <projectActionList>
         <applyWhen>
            <variableRef idRef="projectOptionValue.UART-setup" />
         </applyWhen>
         <copy source="Startup_Code/console-mk.c" target="Startup_Code/console.c" />
         <copy source="Project_Headers/console.h" target="Project_Headers/console.h" />
      </projectActionList>
   </projectActionList>

</root>