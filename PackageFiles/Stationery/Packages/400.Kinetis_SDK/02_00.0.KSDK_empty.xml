<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<!DOCTYPE root SYSTEM "../package.dtd">

<root version="1.0" >
   <!-- Freescale group-ksdk-demoes -->
   <projectActionList id="KSDK-empty-project" root="">
      <applyWhen>
         <and>
            <variableRef idRef="kdsOptionsAvailable" />
            <variableRef idRef="outputType" condition="matches" value=".*ProjectType\.exe$" />
         </and>
      </applyWhen>
      <projectActionList>
         <applyWhen>
            <variableRef idRef="projectOptionValue.Kinetis-SDK-enable" />
         </applyWhen>
         <variable id="projectOptionValue.KSDK-empty" 
               name="Minimal Project" 
               description="Empty Project"
               radioGroup="group-ksdk-demo" >
         </variable>
         <projectActionList>
            <applyWhen>
               <variableRef idRef="projectOptionValue.KSDK-empty" />
            </applyWhen>
            <!-- Basic 'empty' project -->
            <copy source="Sources/main-empty.c"          target="Sources/main.c"        overwrite="true"/>
            <copy source="Sources/hardware_init-empty.c" target="board/hardware_init.c" overwrite="true"/>
            <projectActionList>
               <applyWhen>
                  <variableRef idRef="demo.KDS.useblinky" />
               </applyWhen>
               <!-- KDS Blinky example -->
               <copy source="Sources/main-blinky.c"          target="Sources/main.c"        overwrite="true"/>
               <copy source="Sources/hardware_init-blinky.c" target="board/hardware_init.c" overwrite="true"/>
            </projectActionList>
         </projectActionList>
      </projectActionList>
   </projectActionList>
</root>
